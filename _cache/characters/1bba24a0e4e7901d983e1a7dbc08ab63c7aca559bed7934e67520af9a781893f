current) && current.length >= 1) {\\n            const value = current[0] !== null && current[0] !== undefined ? current[0] : defaultValue[0];\\n            const desc = current[1] !== null && current[1] !== undefined ? String(current[1]) : defaultValue[1];\\n            return [value, desc];\\n        }\\n        return [current, \\\"\\\"];\\n    }\\n\\n    function extractValueAndDesc(rawValue) {\\n        let valueStr = String(rawValue);\\n        let parenDesc = '';\\n\\n        const parenMatch = valueStr.match(/\\\\(([^)]+)\\\\)/);\\n        if (parenMatch) {\\n            parenDesc = parenMatch[1];\\n            valueStr = valueStr.replace(parenMatch[0], '').trim();\\n        }\\n\\n        if (valueStr.includes('->')) {\\n            valueStr = valueStr.split('->').pop().trim();\\n        }\\n\\n        const arrayMatch = valueStr.match(/^\\\\s*\\\\[\\\\s*['\\\"]([^'\\\"]*)['\\\"]/);\\n        if (arrayMatch) {\\n            valueStr = arrayMatch[1];\\n        }\\n\\n        return [valueStr.trim(), parenDesc.trim()];\\n    }\\n\\n    function updateProgressBar(barId, valueId, descId, rawDataPair, min, max, color, userName = '你') {\\n        const barFill = document.getElementById(barId);\\n        const valueDisplay = document.getElementById(valueId);\\n        const descDisplay = document.getElementById(descId);\\n\\n        if (!valueDisplay) return;\\n\\n        const [mainValue, parenDesc] = extractValueAndDesc(rawDataPair[0]);\\n        const originalDesc = rawDataPair[1];\\n        \\n        if (typeof rawDataPair[0] === 'boolean') {\\n            valueDisplay.innerText = rawDataPair[0] ? '是' : '否';\\n        } else {\\n            valueDisplay.innerText = mainValue || (min !== undefined ? String(min) : '--');\\n        }\\n\\n        if (descDisplay) {\\n            const descToShow = parenDesc || originalDesc || \\\"\\\";\\n            const userPlaceholderRegex = /<user>/g;\\n            const finalDesc = descToShow.replace(userPlaceholderRegex, userName);\\n            descDisplay.innerText = finalDesc;\\n            descDisplay.style.display = finalDesc ? 'block' : 'none';\\n        }\\n\\n        if (barFill) {\\n            let numericValue = parseFloat(mainValue);\\n            if (isNaN(numericValue)) {\\n                numericValue = min;\\n            }\\n\\n            numericValue = Math.max(min, Math.min(max, numericValue));\\n            const range = max - min;\\n            let percentage = 0;\\n            if (range > 0) {\\n                percentage = ((numericValue - min) / range) * 100;\\n            } else if (numericValue >= max) {\\n                percentage = 100;\\n            }\\n            barFill.style.width = `${Math.max(0, Math.min(100, percentage))}%`;\\n\\n            if (min < 0) {\\n                const accentColor = color || 'var(--primary-color)';\\n                const midPoint = min + range / 2;\\n                 if(numericValue < midPoint) {\\n                    barFill.style.backgroundImage = `linear-gradient(90deg, var(--color-depravity), ${accentColor})`;\\n                } else {\\n                    barFill.style.backgroundImage = `linear-gradient(90deg, ${accentColor}, var(--color-affection))`;\\n                }\\n            } else {\\n                barFill.style.backgroundImage = 'none';\\n                barFill.style.backgroundColor = color || 'var(--primary-color)';\\n            }\\n        }\\n    }\\n\\n    function updateText(valueId, descId, rawDataPair, userName = '你') {\\n        const valueElement = document.getElementById(valueId);\\n        const descElement = document.getElementById(descId);\\n\\n        if (!valueElement) return;\\n        \\n        const [mainValue, parenDesc] = extractValueAndDesc(rawDataPair[0]);\\n        const originalDesc = rawDataPair[1];\\n\\n        if (typeof rawDataPair[0] === 'boolean') {\\n            valueElement.innerText = rawDataPair[0] ? '是' : '否';\\n        } else {\\n            valueElement.innerT